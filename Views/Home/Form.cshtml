@{
}

@model Movie
<h1>Movie Collection</h1>


<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.CategoryVar)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <br />
    <label>Title</label>
    <input asp-for="Title" required />
    <br />
    <br />
    <label>Year</label>
    <input asp-for="Year" required min="1888"/>
    <br />
    <br />
    <label>Director</label>
    <input asp-for="Director"/> 
    <br />
    <br />
    <label>Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />
    <label>Edited</label>
    <select asp-for="Edited" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label>Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <br />
    <label>Copied to Plex</label>
    <select asp-for="CopiedToPlex" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label>Notes</label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />

    <button type="submit">Submit Movie</button>
</form>
